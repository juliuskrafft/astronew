---
export interface Props {
  heading?: string;
  text?: string;
}

const { heading = "Zero JavaScript Runtime", text = "  Astro renders HTML on the server and strips away any remaining,unused JavaScript." } = Astro.props as Props;


---

<section class="features">
  <div class="container">
    <div class="card">
      <h3>{heading}</h3>
      <p>
        {text}
      </p>
    </div>
    <div class="card">
      <h3>The Power of Islands</h3>
      <p>
        Need interactive UI? Load individual, non-blocking component islands
        in parallel.
      </p>
    </div>
    <div class="card">
      <h3>Lazy-Loading Islands</h3>
      <p>
        Components only hydrate when they scroll into view. If you don't see
        it, Astro won't load it.
      </p>
    </div>
  </div>
</section>

<style>
  .features .container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 20px;
  padding: 0 20px;
  margin: 30px auto;
}

.card {
  background: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

</style>